								width 22px
								height 22px
								border-radius 16px
								overflow hidden
								border 1px solid lightgray
								img
									width 100%
									height 100%
							&.arrow_bottom
								width 12px
								height 0px
								background black
								position relative
								&:after
									content ''
									position absolute
									display inline-block
									top 0
									left 0
									width 0
									height 0
									border-top solid 6px black
									border-left solid 6px transparent
									border-right solid 6px transparent
							
