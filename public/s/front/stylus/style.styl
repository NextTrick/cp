@require 'sprite/sprite.styl'
@font-face
	font-family 'icomoon'
	src url('../font/icomoon.eot?fz5o96')
	src url('../font/icomoon.eot?fz5o96#iefix') format('embedded-opentype'),
	    url('../font/icomoon.ttf?fz5o96') format('truetype'),
	    url('../font/icomoon.woff?fz5o96') format('woff'),
	    url('../font/icomoon.svg?fz5o96#icomoon') format('svg')
	font-weight normal
	font-style normal
*
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
body
	background url(../images/bg.jpg) repeat
.box_center
	width 960px
	margin 0 auto
	position relative
.bold
	font-weight bold
*:focus
	outline 0px
header
	img.bg
		width 100%
		min-height 200px
		position absolute
		top 0
		left 0
		z-index -1
	.social_icons
		margin-top 5px
		span
			display inline-block
			&.fb
				sprite($fb)
				margin-right 5px
			&.in
				sprite($in)
	.bg_diagonal
	.menu_icon
		display none
	.user_option
		position absolute
		right 0
		top 0px
		.user_outside
			display block
			a
				text-decoration none
				font-size 12px
				color #972482
				span
					vertical-align middle
					display inline-block
					&.icon
						sprite($user)
						margin-left 6px
		.user_inside
			display block
			ul
				margin 0
				padding 0
				li
					display inline-block
					&:first-child
						border-right 1px solid lightgray
						padding-right 12px
						vertical-align top
					&:last-child
						padding-left 8px
					a
						text-decoration none
						font-size 14px
						color black
						span
							vertical-align middle
							display inline-block
							&.icon_cart
								sprite($cart)
							&.icon_counter
								width 20px
								height 20px
								border-radius 12px
								text-align center
								color #972482
								background #FFBD0F
								font-size 12px
								padding-top 3px
								box-sizing border-box
								margin-left 5px
