@require 'sprite/sprite.styl'
body
	background url(../images/bg.jpg) repeat
.box_center
	width 960px
	margin 0 auto
header
	img.bg
		width 100%
		min-height 190px
		position absolute
		top 0
		left 0
		z-index -1
	.social_icons
		margin-top 5px
		span
			display inline-block
			&.fb
				sprite($fb)
				margin-right 5px
			&.in
				sprite($in)
	nav
		ul
			margin 10px 0 0
			li
				width 100px
				height 80px
				list-style none
				display inline-block
				vertical-align top
				text-align center
				a
					text-decoration none
					color #CB91C1
					font-size 10px
					position relative
					.icon
						height 54px
						span
							display block
							margin 0 auto 5px
							&.icon_local
								sprite($local)
							&.icon_offers
								sprite($promo)
							&.icon_atraction
								sprite($atraction)
							&.icon_sale
								sprite($sale)
							&.icon_card
								sprite($card)
							&.icon_gold
								sprite($gold)
				&.logo
					width 230px
					margin-top -10px
.right_options
	position absolute
	right 20px
	top 190px
	width 90px
	height 334px
	background url(../images/bg_rectangle_right.png)
	ul
		margin 0
		padding 0
		li
			display block
			list-style none
			text-align center
			width 70px
			margin 35px auto 20px
			a
				font-size 10px
				text-decoration none
				span
					&.icon
						display block
						margin 0 auto 5px
					&.icon_gold
						sprite($gold_gray)
					&.icon_card
						sprite($card_selected)
					&.icon_birthday
						sprite($birthday)
section
	padding-top 120px
	color white
	.btn
		text-decoration none
		color white
		text-align center
	h3
		font-size 22px
	.box_left
		float left
		width 48%
		.grid_340
			width 340px
			text-align center
			.social_buttons
				display block
				height 40px
				.btn
					display inline-block
					width 160px
					padding 10px 0
					&.btn_fb
						background #3B5998
						margin-right 5px
						float left
					&.btn_tw
						background #1B95E0
						margin-left 5px
						float right
			.box_email_register
				width 100%
				margin-bottom 10px
				input
					width 100%
					height 42px
					padding 0 10px
					border 0
					background #CB8FC2
					color white
					box-sizing border-box
					&::-webkit-input-placeholder
						color white
					&:-moz-placeholder
						color white
					&::-moz-placeholder
						color white
					&:-ms-input-placeholder
						color white
				.btn
					width 100%
					display block
					padding 12px 0
					margin-top 10px
					&.btn_register
						background #FF6909
						color white
			.login_link
				width auto
				text-decoration none
				color white
				margin-top 20px
				border-bottom 1px solid #CB8FC2
	.box_right
		float right
		width 48%










