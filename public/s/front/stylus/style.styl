@require 'sprite/sprite.styl'
body
	background url(../images/bg.jpg) repeat
.box_center
	width 960px
	margin 0 auto
.bold
	font-weight bold
*:focus
	outline 0px
header
	img.bg
		width 100%
		min-height 190px
		position absolute
		top 0
		left 0
		z-index -1
	.social_icons
		margin-top 5px
		span
			display inline-block
			&.fb
				sprite($fb)
				margin-right 5px
			&.in
				sprite($in)
	nav
		ul
			margin 10px 0 0
			li
				width 100px
				height 80px
				list-style none
				display inline-block
				vertical-align top
				text-align center
				a
					text-decoration none
					color #CB91C1
					font-size 10px
					position relative
					.icon
						height 54px
						span
							display block
							margin 0 auto 5px
							&.icon_local
								sprite($local)
							&.icon_offers
								sprite($promo)
							&.icon_atraction
								sprite($atraction)
							&.icon_sale
								sprite($sale)
							&.icon_card
								sprite($card)
							&.icon_gold
								sprite($gold)
				&.logo
					width 230px
					margin-top -10px
.right_options
	position absolute
	right 20px
	top 190px
	width 90px
	height 334px
	background url(../images/bg_rectangle_right.png)
	ul
		margin 0
		padding 0
		li
			display block
			list-style none
			text-align center
			width 70px
			margin 35px auto 20px
			a
				font-size 10px
				text-decoration none
				span
					&.icon
						display block
						margin 0 auto 5px
					&.icon_gold
						sprite($gold_gray)
					&.icon_card
						sprite($card_selected)
					&.icon_birthday
						sprite($birthday)
section
	padding-top 120px
	padding-bottom 50px
	overflow hidden
	color white
	.btn
		text-decoration none
		color white
		text-align center
	h3
		font-size 24px
	.box_left
		float left
		width 48%
		.grid_340
			width 340px
			text-align center
			.social_buttons
				display block
				height 40px
				.btn
					display inline-block
					width 160px
					padding 10px 0
					&.btn_fb
						background #3B5998
						margin-right 5px
						float left
					&.btn_tw
						background #1B95E0
						margin-left 5px
						float right
			.box_email_register
				width 100%
				margin-bottom 20px
				input
					width 100%
					height 42px
					padding 0 10px
					border 0
					background #CB8FC2
					color white
					box-sizing border-box
					margin-bottom 10px
					&::-webkit-input-placeholder
						color white
					&:-moz-placeholder
						color white
					&::-moz-placeholder
						color white
					&:-ms-input-placeholder
						color white
				.btn
					width 100%
					display block
					padding 12px 0
					&.btn_register
						background #FF6909
						color white
	.purple_link
		width auto
		text-decoration none
		color white
		border-bottom 1px solid #CB8FC2
		line-height 22px
	.box_right
		float right
		width 48%
		.box_rectangle
			width 280px
			height 140px
			background #99E5FF
	.box_signin
		width 620px
		margin 0 auto
		text-align center
		form
			p
				&.bold
					margin 30px 0
			.box_form
				display block
				height 42px
				.left
					float left
					margin-top 7px
				.right
					float right
					width 400px
				select
					height 32px
					border none
					border-radius 2px
					color white
					opacity 0.6
					&.large
						width 100%
					&.dni_type
						float left
						width 120px
					&.day
						float left
						margin-right 5px
						width 90px
					&.month
						float left
						width 180px
					&.year
						float right
						width 120px
				input
					opacity 0.6
					height 32px
					border none
					border-radius 2px
					padding 0 5px
					color white
					&.dni_number
						float right
						width 270px
					&.btn_signin
						opacity 1
						background #FF6909
						color white
						margin-bottom 20px
				.purple_light
					background #CC90C3
				.purple_dark
					background #000000
footer
	display block
	img.bg
		width 100%
		z-index -1
	ul
		padding 0
		margin-top -40px
		text-align center
		li
			list-style none
			display inline-block
			margin 0 5px 
			a
				color #972383
				text-decoration none
				font-size 12px










