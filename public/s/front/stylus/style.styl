@require 'sprite/sprite.styl'
body
	background url(../images/bg.jpg) repeat
.box_center
	width 960px
	margin 0 auto
.bold
	font-weight bold
*:focus
	outline 0px
header
	img.bg
		width 100%
		min-height 190px
		position absolute
		top 0
		left 0
		z-index -1
	.social_icons
		margin-top 5px
		span
			display inline-block
			&.fb
				sprite($fb)
				margin-right 5px
			&.in
				sprite($in)
	nav
		ul
			margin 10px 0 0
			li
				width 100px
				height 80px
				list-style none
				display inline-block
				vertical-align top
				text-align center
				a
					text-decoration none
					color #CB91C1
					font-size 10px
					position relative
					.icon
						height 54px
						span
							display block
							margin 0 auto 5px
							&.icon_local
								sprite($local)
							&.icon_offers
								sprite($promo)
							&.icon_atraction
								sprite($atraction)
							&.icon_sale
								sprite($sale)
							&.icon_card
								sprite($card)
							&.icon_gold
								sprite($gold)
				&.logo
					width 230px
					margin-top -10px
.right_options
	position absolute
	right 20px
	top 190px
	width 90px
	height 334px
	background url(../images/bg_rectangle_right.png)
	ul
		margin 0
		padding 0
		li
			display block
			list-style none
			text-align center
			width 70px
			margin 35px auto 20px
			a
				font-size 10px
				text-decoration none
				span
					&.icon
						display block
						margin 0 auto 5px
					&.icon_gold
						sprite($gold_gray)
					&.icon_card
						sprite($card_selected)
					&.icon_birthday
						sprite($birthday)
section
	padding-top 120px
	padding-bottom 50px
	overflow hidden
	color white
	h2
		span
			color #FFB000
	.welcome_box
		text-align center
	.yellow_box
		background #FFB000
		width 200px
		height 42px
		text-align center
		padding-top 8px
		box-sizing border-box
		color #470446
		font-size 24px
		font-weight bold
		border-radius 20px
		margin 0 auto
		margin-bottom -20px
		z-index 999
		position relative
		margin-top 60px
	.btn
		border 0
		padding 10px
		box-sizing border-box
		border-radius 10px
		color white
	.purple_box
		background #470446
		border-radius 20px
		padding 20px 0
		p
			margin-bottom 20px
			font-size 20px
		hr
			border-style dashed
			color #8C008C
		.content
			overflow hidden
			padding 20px 20px 0
		.left
			width 45%
			text-align center
			button
				width 100%
				margin-bottom 8px
				&.btn_fb
					background #3B5998
				&.btn_tw
					background #1B95E0
		.right
			width 45%
			text-align center
			button
				width 100%
				&.btn_signin
					background #FF5800
			input
				width 100%
				border 0
				margin-bottom 8px
				height 36px
				border-radius 10px
				padding 0px 10px
				text-align center
		.login_link
			text-align center
			padding 20px 0 10px
			a
				color #FF5800
				text-decoration none
				font-size 18px
	.left
		float left
	.right
		float right
	.offers_box
		margin-top 40px
		.col_3
			width 33%
footer
	display block
	img.bg
		width 100%
		z-index -1
	ul
		padding 0
		margin-top -40px
		text-align center
		li
			list-style none
			display inline-block
			margin 0 5px 
			a
				color #972383
				text-decoration none
				font-size 12px










