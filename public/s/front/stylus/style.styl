@require 'sprite/sprite.styl'
body
	background url(../images/bg.jpg) repeat
.box_center
	width 960px
	margin 0 auto
.bold
	font-weight bold
*:focus
	outline 0px
header
	img.bg
		width 100%
		min-height 190px
		position absolute
		top 0
		left 0
		z-index -1
	.social_icons
		margin-top 5px
		span
			display inline-block
			&.fb
				sprite($fb)
				margin-right 5px
			&.in
				sprite($in)
	nav
		ul
			margin 10px 0 0
			li
				width 100px
				height 80px
				list-style none
				display inline-block
				vertical-align top
				text-align center
				a
					text-decoration none
					color #CB91C1
					font-size 10px
					position relative
					.icon
						height 54px
						span
							display block
							margin 0 auto 5px
							&.icon_local
								sprite($local)
							&.icon_offers
								sprite($promo)
							&.icon_atraction
								sprite($atraction)
							&.icon_sale
								sprite($sale)
							&.icon_card
								sprite($card)
							&.icon_gold
								sprite($gold)
				&.logo
					width 230px
					margin-top -10px
.right_options
	position absolute
	right 20px
	top 190px
	width 90px
	height 334px
	background url(../images/bg_rectangle_right.png)
	ul
		margin 0
		padding 0
		li
			display block
			list-style none
			text-align center
			width 70px
			margin 35px auto 20px
			a
				font-size 10px
				text-decoration none
				span
					&.icon
						display block
						margin 0 auto 5px
					&.icon_gold
						sprite($gold_gray)
					&.icon_card
						sprite($card_selected)
					&.icon_birthday
						sprite($birthday)
section
	padding-top 120px
	padding-bottom 50px
	overflow hidden
	color white
	&.app_content
		padding-top 50px
		.menu
			background #ECECEC
			width 295px
			color black
			margin 0 auto
			position relative
			margin-bottom -14px
			ul
				margin 0
				padding 0
				li
					display inline-block
					list-style none
					padding 5px 10px
					cursor pointer
					&.first
						border-right 1px solid lightgray
					&.last
						border-left 1px solid lightgray
					&.active
						background #F7A100
	h2
		span
			color #FFB000
	.welcome_box
		text-align center
	.app_box
		padding 40px 0
		text-align center
	.yellow_box
		background #FFB000
		height 42px
		display inline-block
		padding 8px 20px
		text-align center
		box-sizing border-box
		color #470446
		font-size 24px
		font-weight bold
		border-radius 20px
		margin 0 auto
		margin-bottom -20px
		z-index 999
		position relative
		margin-top 60px
	.btn
		border 0
		padding 10px
		box-sizing border-box
		border-radius 10px
		color white
		&.btn_fb
			background #3B5998
		&.btn_tw
			background #1B95E0
		&.btn_orange
			background #FF5800
		&.btn_save_signin
			margin-top 20px
	.purple_box
		background #6C006C
		border-radius 20px
		padding 20px 0
		p
			margin-bottom 20px
			font-size 20px
			&.yellow_text
				color #F7A100
			&.small_text
				font-size 18px
			&.term
				font-size 12px
				a
					color white
			&.p_16
				font-size 16px
				span
					color #F7A100
		hr
			border-style dashed
			color #8C008C
		.content
			overflow hidden
			padding 20px 20px 0
		.left
			width 45%
			text-align center
			button
				width 100%
				margin-bottom 8px
		.right
			width 45%
			text-align center
			button
				width 100%
		.options
			overflow hidden
			.col_3
				width 33%
				.circle
					width 150px
					height 150px
					border-radius 200px
					background #410041
					display block
					margin 0 auto
				p
					width 85%
					margin 10px auto 0
		.bar_info
			overflow hidden
			background #310041
			height 85px
			padding 22px
			box-sizing border-box
			margin-top 20px
			p
				margin 10px 0 0
			button
				span
					display inline-block
					vertical-align middle
					&.icon
						margin -7px 0px 0px 5px
						sprite($add_card)
		.benefits_offers
			width 95%
			margin 0 auto
			.offers_box_two
				overflow hidden
				.left
					width 50%
					height 220px
					background #F29224
					padding 20px
					box-sizing border-box
				.right
					padding 20px
					height 220px
					width 50%
					background white
					box-sizing border-box
					p
						color black
					button
						width 300px
			.offers_box_three
				margin 20px 0
				overflow hidden
				.col_3
					width 32%
					.box_white
						background white
						border-radius 15px
						color black
					&:first-child
						margin-right 2%	
					.image
						height 145px
						overflow hidden
						img
							width 100%
		.info_box
			text-align left
			width 65%
			padding 5px 25px
			span
				&.text
					font-size 14px
	input
		width 100%
		border 0
		margin-bottom 8px
		height 36px
		border-radius 10px
		padding 0px 10px
		text-align center
		&.inp_right
			width 200px
			float right
	select
		height 36px
		line-height 36px
		background url(../images/arrow_select.png) no-repeat right
		padding 0px 10px
		border 0
		color gray
		/*for firefox*/
		-moz-appearance none
		/*for chrome*/
		-webkit-appearance none
	select::-ms-expand
		display none
	.bg_white
		background white
		border-radius 20px
		select
			width 100%
		&.doc_type
			width 100px
			overflow hidden
			float left
		&.day
			width 80px
			float left
			margin-right 5px
		&.month
			width 137px
			float left
		&.year
			width 90px
			float right
	.login_link
		text-align center
		padding 20px 0 10px
		a
			color #FF5800
			text-decoration none
			font-size 18px
	.left
		float left
	.right
		float right
	.offers_box
		margin-top 40px
		.col_3
			width 33%
	.error_message
		background #F1222D
		opacity 0.8
		color white
		text-align center
		padding 10px
		width 650px
		margin 0 auto
		border-radius 10px
		position absolute
		left 23.5%
		span
			display inline-block
			vertical-align top
			&.icon
				sprite($close_icon)
				cursor pointer
			&.text
				margin-left 10px
				margin-top 5px
		&.hide
			display none
	form
		.form_control
			overflow hidden
			margin-bottom 10px
			.left
				width 35%
				text-align left
			.right
				width 63%
				.button
					width 100%
					margin-top 20px
		&.signin_form
			.content_form
				width 500px
				margin 0 auto
footer
	display block
	img.bg
		width 100%
		z-index -1
	ul
		padding 0
		margin-top -40px
		text-align center
		li
			list-style none
			display inline-block
			margin 0 5px 
			a
				color #972383
				text-decoration none
				font-size 12px


//modal
/* Z-index of #mask must lower than #boxes .window */
#mask
	position absolute
	z-index 9000
	background-color #000
	display none
	top 0
	left 0

.modal_box
	position absolute
	width 440px
	height 200px
	display none
	z-index 9999
	.modal_content
		padding 20px
		width 400px
		margin 200px auto 0
		span.icon_logo
			sprite($logo_2)
			display block
			margin 0 auto
		h3
			color #FEB200
			font-size 28px
			font-weight bold
		input
			width 400px
		button
		a
			width 400px
			text-decoration none
			display block
		&.modal_recovery_content
			text-align center
#modal_new_password
	.modal_content
		margin-top 150px
/* Customize your modal window here, you can add background image too */
#modal_recovery_password
#modal_recovery_response
#modal_new_password
#modal_new_password_response
#modal_response_signin
	width 651px
	height 686px
	background url(../images/modal_bg.png)
	


//parsley
ul.parsley-errors-list
	text-align left
	padding 0
	margin -1px 0 5px
	font-size 12px
	li
		list-style none
		color red










